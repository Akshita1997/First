<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35E3D7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.rkrmills.first.MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="8dp"
        android:fontFamily="cursive"
        android:text="HELLO"
        android:textStyle="bold"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/name"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="16dp"
        android:text="AKSHITA !"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_so"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:cursorVisible="true"
        android:linksClickable="true"
        android:onClick="goToSo"
        android:text="StackOverflow"
        android:textSize="20sp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/TextView1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:autoLink="web"
        android:textSize="25sp"
        android:text="My web site: www.stackoverflow.com"
        android:textColor="#ffffff"
        android:layout_below="@+id/name2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
